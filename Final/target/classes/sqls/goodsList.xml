<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="goodsList">

	<!-- <resultMap id="imageresult" type="GoodsDto"> <result column="IMAGELOC" 
		property="imageloc" /> </resultMap> -->

	<!-- 모든 게시물 출력 -->
	<select id="getGoodsAllList">
		SELECT SEQ, ID, IMAGE, TITLE, CATEGORY, BRAND,
		PRICE,
		OPTIONS, CONTENT, RENTALCOUNT, WDATE
		FROM GOODS
		ORDER BY SEQ DESC
	</select>
	

	<!-- 게시물 15개 및 검색 출력 -->
	<select id="getGoodsPagingList"
		parameterType="kh.com.a.model.GoodsParam"
		resultType="kh.com.a.model.GoodsDto">
		SELECT * FROM(SELECT A.*, ROWNUM RNUM FROM (SELECT * FROM GOODS
		<if test="keyword !='' and keyword != null">
			WHERE TITLE LIKE '%'||#{keyword}||'%'
		</if>
		ORDER BY SEQ DESC)A) WHERE RNUM BETWEEN ${start} AND ${end}

		<!-- SELECT SEQ, ID, IMAGE, TITLE, CATEGORY, BRAND,PRICE, OPTIONS, CONTENT, 
			RENTALCOUNT, WDATE FROM(SELECT A.*, ROWNUM RNUM FROM (SELECT SEQ, ID, IMAGE, 
			TITLE, CATEGORY, BRAND, PRICE, OPTIONS, CONTENT, RENTALCOUNT, WDATE FROM 
			GOODS <if test="keyword !='' and keyword != null"> WHERE TITLE LIKE '%'||#{keyword}}||'%' 
			</if> ORDER BY SEQ DESC)A) WHERE RNUM BETWEEN ${start} AND ${end} -->

	</select>

	<select id="getGoodsCount"
		parameterType="kh.com.a.model.GoodsParam"
		resultType="java.lang.Integer">
		SELECT COUNT(*) FROM GOODS
		<if test="keyword !='' and keyword != null">
			<if test="category == '' or category == null">
				WHERE TITLE LIKE '%'||#{keyword}||'%'
			</if>
			<if test="category != '' and category != null">
				WHERE TITLE LIKE '%'||#{keyword}||'%'
				AND CATEGORY LIKE
				'%'||#{category}||'%'
			</if>
		</if>
		<if
			test="(keyword =='' or keyword == null) and (category != '' and category != null)">
			WHERE CATEGORY LIKE '%'||#{category}||'%'
		</if>
	</select>

</mapper>



